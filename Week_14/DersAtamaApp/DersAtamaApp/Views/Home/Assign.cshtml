@model DersAtamaApp.Models.StudentModel
<h5 class="display-4">Assign Lesson</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-form-label text-danger">First Name: </label>
            <label class="col-form-label">@Model.FirstName</label>
        </div>
        <div class="form-group">
            <label class="col-form-label text-danger">Last Name: </label>
            <label class="col-form-label">@Model.LastName</label>
        </div>
    </div>
    <div class="col-md-8">
        @for (int i = 0; i < Model.SelectedCourses.Count; i++)
        {
            <input type="hidden" name="SelectedCourses[@i].CourseId" value="@Model.SelectedCourses[i].CourseId" />
            <input type="hidden" name="SelectedCourses[@i].Name" value="@Model.SelectedCourses[i].Name" />
        }
        @foreach (var item in (List<DersAtamaApp.Models.Entity.Course>)ViewBag.Courses)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@item.CourseId" name="courseIds" id="course_@item.CourseId" @(Model.SelectedCourses.Any(x=>x.CourseId==item.CourseId)?"checked":"") />
                <label class="form-check-label" for="course_@item.CourseId">@item.Name</label>
            </div>
        }
    </div>
</div>